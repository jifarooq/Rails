<h1> Log in </h1>

<%= flash[:errors] %>

<form action=<%= session_url %> method="post">
	<input type='hidden'
	 name='authenticity token' 
	 value=<%=form_authenticity_token%>

	<label>Email
		<input type="text" name="user[email]">
	</label>

	<label>Password
		<input type="password" name="user[password]">
	</label>

<input type="Submit" value="Log in!">

</form>